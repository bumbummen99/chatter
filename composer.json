{
    "name": "skyraptor/chatter",
    "description": "A simple forum package for Laravel.",
    "authors": [
        {
            "name": "Tony Lea",
            "email": "tony@devdojo.com"
        },
        {
            "name": "Patrick Henninger",
            "email": "privat@skyraptor.eu"
        }
    ],
    "require": {
        "mews/purifier": "~3.1.1"
    },
    "require-dev": {
        "illuminate/cache": "~5.1.20|5.2.*|5.3.*|6.0.*",
        "illuminate/console": "~5.1.20|5.2.*|5.3.*|6.0.*",
        "mockery/mockery": "^0.9.5",
        "phpunit/phpunit": "~5.7.14"
    },
    "autoload": {
	    "psr-4": {
	      "DevDojo\\Chatter\\": "/src"
		}
	},
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevDojo\\Chatter\\ChatterServiceProvider"
            ]
        }
    }
}
